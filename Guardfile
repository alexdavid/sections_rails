# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'rspec', :version => 2 do
  watch(%r{^app/sections/})        { "spec" }
  watch(%r{^lib/})                 { "spec" }
  watch(%r{^spec/controllers/})    { "spec" }
  watch(%r{^spec/dummy/app/})      { "spec" }
  watch(%r{^spec/sections_rails/}) { "spec" }
end

